@model IEnumerable<AdanaCafe.Models.Cafe>
@{
    ViewBag.Title = "Kafeler";
}

<h2 class="text-center" style="color: #d02090; font-weight: bold; text-shadow: 1px 1px 2px rgba(255,255,255,0.8);">🌸 Adana'nın En Tatlı Kafeleri</h2>

<div class="row mb-4 justify-content-center">
    <div class="col-md-8 text-center">
        <form action="/Cafe/List" method="get" class="d-flex gap-2 mb-3 shadow-sm p-2 bg-white rounded-pill">
            <input type="text" name="search" class="form-control border-0 bg-transparent" placeholder="Kafe ismini buraya yaz..." value="@Request.QueryString["search"]" />

            <button type="submit" class="btn btn-pink rounded-pill px-4">Ara</button>
        </form>

        <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a href="/Cafe/List?category=Student" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm bg-white">🎓 Öğrenci</a>
            <a href="/Cafe/List?category=Family" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm bg-white">👨‍👩‍👧‍👦 Aile</a>
            <a href="/Cafe/List?category=Working" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm bg-white">👨‍💻 Çalışma</a>
            <a href="/Cafe/List?category=Fun" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm bg-white">💃 Eğlence</a>
            <a href="/Cafe/List" class="btn btn-secondary btn-sm rounded-pill shadow-sm">Tümü</a>
        </div>
    </div>
</div>

<hr style="border-top: 2px solid #ffb6c1; opacity: 0.5;" />

<div class="row">
    @foreach (var cafe in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow border-0" style="border-radius: 20px; background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(5px);">

                <div class="text-center py-4" style="background: #ffb6c1; border-radius: 20px 20px 0 0; font-size: 3rem;">
                    @if (cafe.IsForFun)
                    {<span>💃</span> }
                    else if (cafe.IsStudent)
                    { <span>🎓</span> }
                    else if (cafe.IsForWorking)
                    { <span>👨‍💻</span> }
                    else
                    { <span>👨‍👩‍👧‍👦</span>}
                </div>

                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <h4 class="card-title fw-bold" style="color: #ff1493;">@cafe.CafeName</h4>
                        <p class="card-text text-muted">
                            <span class="badge rounded-pill bg-light text-dark border">📍 @cafe.District</span>
                        </p>
                    </div>

                    <div class="mt-3">
                        <a href="/Menu/Index/@cafe.CafeId" class="btn btn-pink w-100 rounded-pill shadow-sm mb-2">📋 Menüyü Gör</a>
                        <a href="https://www.google.com/maps/search/?api=1&query=@cafe.CafeName+@cafe.District+Adana" target="_blank" class="btn btn-outline-secondary btn-sm w-100 rounded-pill">📍 Haritada Bak</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>